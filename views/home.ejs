<div class="col-sm-14 col-centered">

	<div class="row">
        <div class="input-group col-md-6 col-centered">
            <input type="text" class="form-control input-lg" id="serchString" placeholder="Buscar" />
            <span class="input-group-btn">
                <button id="searchOppBtn" class="btn btn-info btn-lg" type="button">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
	</div>
</div>

<br />

<!-- Header -->
<header id="top" class="header">
        <div class="text-vertical-center">
            <h1>Welcome to WelTalent</h1>
            <h3>Get to know opportunities worldwide</h3>
            <br>
            <a href="/listOpportunities" class="btn btn-dark btn-lg">See Opportunities</a>
            <a href="/contactUs?requestFrom=employer" class="btn btn-dark btn-lg">Looking for Hire</a>
        </div>
</header>

<br />
<br />

<div class="col-sm-14 col-centered">
	
	<% for (var i = 0; i < opportunities.length; i++) { %>	
	<div class="col-md-4 column productbox">
	    <a href="#" onclick="oppClick(<%= opportunities[i].code %>)"><img src="images/<%= opportunities[i].opportunityPicture %>" class="img-responsive"></a>
	    <div class="producttitle"><%= opportunities[i].jobTitle %></div>
	    <div class="productprice"><div class="pull-right"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= opportunities[i].jobLocation %></div><div class="pricetext"><img class="img-company-opp" src="images/<%= opportunities[i].companyLogo %>" /> <%= opportunities[i].company %></div></div>
	</div>
	
	<% } %>
	
	<br />
	
</div>

</div>

<script>

function oppClick(code) {
    window.location = '/viewOpportunity?oppCode=' + code;
}

$("#searchOppBtn").click(function() {
    var v_SearchString = $("#serchString").val();
    window.location = '/listOpportunities?searchString=' + v_SearchString;
});

$(document).ready(function(){

});

</script>